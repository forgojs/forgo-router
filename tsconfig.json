{
  "compilerOptions": {
    "outDir": "./dist",
    "allowJs": false,
    "target": "ES2015",
    "module": "ESNext",
    "moduleResolution": "node",
    "lib": ["ES2020", "DOM"],
    "sourceMap": true,
    "strict": true,
    "jsx": "react",
    "jsxFactory": "forgo.h",
    "jsxFragmentFactory": "forgo.Fragment"
  },
  "include": ["./src/**/*"]
}
