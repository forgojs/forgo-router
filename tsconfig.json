{
  "compilerOptions": {
    "outDir": "./dist",
    "allowJs": false,
    "target": "ES2015",
    "module": "ESNext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "lib": ["ES2020", "DOM"],
    "sourceMap": true,
    "strict": true,
    "jsx": "react",
    "jsxFactory": "forgo.createElement",
    "jsxFragmentFactory": "forgo.Fragment",
    "declaration": true
  },
  "include": ["./src/**/*", "./tests/**/*"]
}
